{
  "name": "boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "My own Webpack + React + TypeScript boilerplate for personal projects.",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot",
    "prod": "cross-env NODE_ENV=production webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack",
    "test": "jest --coverage --coverage-reporters=lcov",
    "test:ci": "jest --ci --coverage --coverage-reporters=lcov",
    "test:watch": "jest --watch --coverage --coverage-reporters=lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wedvich/boilerplate.git"
  },
  "author": "Martin Wedvich <wedvich@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wedvich/boilerplate/issues"
  },
  "homepage": "https://github.com/Wedvich/boilerplate#readme",
  "dependencies": {
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.8.6",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "style-loader": "^0.23.1",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  }
}
